<h4>Tell A Friend </h4>
<h3>Recommend listing <%= @listing.listing_title %></h3>
<hr>
<%= form_for ([@listing, @listing.tell_a_friends.new]) do |f| %>
	
    <div class="form-group">
        <%= f.text_field :your_name, class: "form-control", placeholder: "Your Name *"  %>
	</div>
    <div class="form-group">
        <%= f.text_field :friend_name, class: "form-control", placeholder: "Your Friend's Name *"  %>
	</div>
	<div class="form-group">
	    <%= f.text_field :friend_email, class: "form-control", placeholder: "Your Friend's Email Address *"  %>
	</div>
	<div class="form-group">
	    <%#= f.label :message,  %>
	    <%= f.text_area :message, class: "form-control", value: "I think you might be interested in this property #{@listing.listing_title} at #{@listing.location} " %>
	</div>
    <div class="form-group">
        <%= f.submit "Send", class: 'btn btn-primary' %>
    </div>
<% end %>
