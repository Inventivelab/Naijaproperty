<div class="row" id="edit-profile">
  <!-- <div > -->

    <div class="col-md-3 col-sm-5 col-3 text-center" id="profile-menu">
      <%= render 'shared/profile_nav' %>
    </div>

    <div class=" col-md-9 col-sm-7 col-9 text-center" id="profile-content">
      <div class="container">
        <div class="card">
          <div class="card-header">Update Profile</div>
            <div class="card-body">
              <div class="container-flow">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                  <%= render 'shared/devisemessage' %>

                <div class="card">
                  <div class="card-header" id="update_profile_header">Required</div>
                  <div class="card-body">
                    <div class="form-group">

                      <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Username"%>
                    </div>
                    <div class="form-group">

                      <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
                    </div>
                    <div class="form-group">

                      <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
                    </div>
                    <div class="form-group">

                      <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
                    </div>


                    <div class="form-group">

                      <%= f.text_area :bio, rows: "15", cols: "25", placeholder: "Describe Yourself", class: "form-control" %>
                    </div>
                    <div class="form-group">

                      <%= f.text_field :address, class: "form-control", placeholder: "Your Address Location" %>
                    </div>

                    <div class="form-group">

                      <%= f.text_field :dateofbirth, class: "form-control", placeholder: "Date of Birth" %>
                    </div>
                    <div class="form-group">

                      <%= f.text_field :gender, class: "form-control", placeholder: "Male or Female" %>
                    </div>
                  </div>
                </div><br/>




                  <div class="card">
                    <div class="card-header" id="update_profile_header">Company Info (OPTIONAL)</div>
                    <div class="card-body">
                      <div class="form-group">

                        <%= f.text_field :business_name, class: "form-control", placeholder: "Company or Business Name" %>
                      </div>
                      <div class="form-group">

                        <%= f.text_field :company_address, class: "form-control", placeholder: "Business/Company Address" %>
                      </div>
                      <div class="form-group">

                        <%= f.text_field :website, class: "form-control", placeholder: "Business/Company Website URL e.g www.company.com" %>
                      </div>
                    </div>
                  </div><br/>

                  <div class="card">
                    <div class="card-header" id="update_profile_header">Optional</div>
                    <div class="card-body">
                      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                      <% end %>

                      <div class="form-group">
                        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "New Password (leave blank if you don't want to change it)"%>
                        <!-- <% if @minimum_password_length %>
                          <br />
                          <em><%= @minimum_password_length %> characters minimum</em>
                        <% end %> -->
                      </div>

                      <div class="form-group">
                        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password" %>
                      </div>
                    </div>
                  </div><br/>

                  <div class="form-group">
                    <%= f.submit "Update", class: "btn btn-normal btn-block" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>


      </div>
    </div>
  </div>

</div>
