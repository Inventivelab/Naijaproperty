<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if user_signed_in? && (current_user_admin? || current_user_moderator?) %>
        <%= link_to "New Blog", blogs_add_new_post_path, class: "btn btn-normal", id: "new-blog-path" %>
      <% end %>
      <% if @blogs.empty? %>
        <h1 id="no-blogs">No Blogs Created</h1>
      <% else %>
        <% @blogs.each do |blog| %>
          <div class="card card-body">
            <div class="blog-title">
              <%= link_to blog.title, blog_path(blog) %>
              <%= image_tag blog.image, width:'100%' %>
            </div>
            <div class="blog-body">
              <%= truncate(blog.content, length: 500) %>
            </div>
            <div class="author">
              <small>Created by: <%= blog.user.full_name %></small>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
