<% @blogs.each do |blog| %>
  <div class="col-md-12 col-12 blog_content">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-4 col-6">
              <%= image_tag blog.image, class: "card-img", alt: "Card image", width:'100%' %>
            </div>
            <div class="col-md-8 col-6">
              <h5><%= link_to blog.title, blog %></h5>
            <small>By: <%= blog.user.full_name %> <%= blog.created_at.strftime("%b %d, %Y") %></small>
            <p class="card-text"><%= sanitize blog.content.truncate(200, separator: ' ').html_safe%></p>
          </div>
        </div>
      </div>
    </div><br />
  </div>
<% end %>
