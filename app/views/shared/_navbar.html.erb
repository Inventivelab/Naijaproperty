<!-- Dropdown Structure -->

<!-- blue lighten-4 z-depth-2 -->
<header>
  <ul id="dropdown1" class="dropdown-content">
    <li><%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %></li>
    <li><%= link_to "Manage Listing", listings_path, class: "dropdown-item" %></li>
    <li><%= link_to "List Your Property", new_listing_path, class: "dropdown-item" %></li>
    <li><%= link_to "Messages", chats_path, class: "dropdown-item" %></li>
    <li><%= link_to "Update Profile", edit_user_registration_path, class: "dropdown-item" %></li>

    <li class="divider"></li>
    <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
  </ul>
  <ul id="dropdown2" class="dropdown-content mask">
    <li><%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %></li>
    <li><%= link_to "Manage Listing", listings_path, class: "dropdown-item" %></li>
    <li><%= link_to "List Your Property", new_listing_path, class: "dropdown-item" %></li>
    <li><%= link_to "Messages", chats_path, class: "dropdown-item" %></li>
    <li><%= link_to "Update Profile", edit_user_registration_path, class: "dropdown-item" %></li>

    <li class="divider"></li>
    <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
  </ul>
  <!-- <div class="navbar-fixed"> -->
    <nav class="white darken-1 z-depth-2 nav-extended">
      <div class="container-flow">
        <div class="nav-wrapper">
          <%= link_to "naijaPROPERTY", root_path, class: " brand-logo" %>

          <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
          <ul class="right hide-on-med-and-down">

            <li><%= link_to "Sale", root_path %></li>
            <li><%= link_to "Rent", root_path %></li>
            <li><%= link_to "Short Stay", root_path %></li>
            <% if user_signed_in? %>
            <li>
              <%= link_to notifications_path do %>
                <i class="fa fa-bell fa-2x icon-flister-notification "></i>
                <div class="badge" id="navbar_number_of_unread"><%= current_user.unread if current_user.unread > 0 %></div>
              <% end %>
            </li>
              <li><a class="dropdown-button valign-wrapper" href="#!" data-activates="dropdown1">
                <%= image_tag avatar_url(current_user), class: "circle responsive-img avatar_small" %>&nbsp;
                <%= current_user.full_name %><i class="material-icons right"></i></a></li>
              <% else %>
              <li><%= link_to "Sign up", new_user_registration_path %></li>
              <li><%= link_to "Login", new_user_session_path %></li>


            <% end %>
            <li class="active last-link"><%= link_to "List Your Property", new_listing_path %></li>

          </ul>
          <ul class="side-nav" id="mobile-demo">
            <li><%= link_to "Sale", root_path %></li>
            <li><%= link_to "Rent", root_path %></li>
            <li><%= link_to "Short Stay", root_path %></li>
            <li class="active"><%= link_to "List Your Property", new_listing_path %></li>
            <% if user_signed_in? %>

              <li class="active"><a class="dropdown-button valign-wrapper" href="#!" data-activates="dropdown2">
                <%= image_tag avatar_url(current_user), class: "circle responsive-img avatar_small" %>
                <i class="material-icons right">arrow_drop_down</i></a></li>
              <% else %>
              <li><%= link_to "Sign up", new_user_registration_path %></li>
              <li><%= link_to "Login", new_user_session_path %></li>
            <% end %>


          </ul>
        </div>
      </div>
    </nav>
  <!-- </div> -->
</header>

<script>
  $(".dropdown-button").dropdown();
  $(".button-collapse").sideNav();
</script>
