<% if @logos.count > 0 %>
  <div class="container">
    <div class="row">
      <% @logos.each do |logo| %>
        <div class="col-md-6 col-sm-6">
          <div class="card">
            <div class="card-header preview">
              <%= image_tag logo.banner.url() %>
            </div>
            <div class="card-body">
              <span class="float-right">
                <%= link_to user_logo_path(logo.user_id, logo), remote: true, method: :delete, data: { confirm: "Are you sure?"} do %>
                  <i class="fa fa-trash-o" aria-hidden="true"> Remove</i>
                <% end %>
              </span>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
