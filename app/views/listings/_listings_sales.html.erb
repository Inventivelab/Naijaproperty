<% listings.each do |listing| %>
  <div class="col-md-12 col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-md-6 col-sm-6 col-12">
          <div class="card-box-header">
            <div class="single-item">
              <% listing.photos.each do |photo| %>
                <%= image_tag photo.image.url(), class: "card-img-top", width: '100%', height: "330px" %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-sm-6 col-12">
          <div class="card-box-body">
            <h5 class="card-title"><%= link_to listing.listing_title, listing %></h5>

          </div>

          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <div class="row">
                <div class="col-md-12 col-sm-12 col-12">
                  <i class="fa fa-money"></i>&nbsp;&nbsp;â‚¦ <%= listing.price || listing.rent_price || listing.short_stay_price %>
                  <!-- <i class="fa fa-home">&nbsp;&nbsp;<%= pluralize(listing.bathroom, "Home") %> -->
                </div>
              </div>
            </li>
            <li class="list-group-item">
              <div class="row">
                <div class="col-md-6 col-sm-6 col-6">
                  <i class="fa fa-bed"></i>&nbsp;&nbsp;<%= pluralize(listing.bedroom, "Bed") %>
                </div>
                <div class="col-md-6 col-sm-6 col-6">
                  <i class="fa fa-bath"></i>&nbsp;&nbsp;<%= pluralize(listing.bathroom, "Bath") %>
                </div>

              </div>

            </li>
            <li class="list-group-item"><%= listing.location%></li>

          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>


<script>
  $(document).ready(function(){

    $('.single-item').slick({
      dots: true
    });
    //$('.fade').slick();
  });
</script>
