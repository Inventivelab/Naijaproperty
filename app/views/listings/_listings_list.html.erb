<% listings.each do |listing| %>
  <div class="col-md-3 col-sm-6">
    <div class="card text-white" style="background-color: inherit; border-color: 1px solid #e8efee;" >
      <%= link_to(listing) do %>
        <%= image_tag listing.backgroud_image(:medium), class: "card-img", width: '100%', height: "240px" %>

      <div class="card-img-overlay">

        <h5 class="card-title btn btn-normal"><%= price_to_currency(listing.prices) %></h5>
        <!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <p class="card-text">Last updated 3 mins ago</p> -->
      </div>
      <div class="card-body">
        <h5 class="card-title ele-16"><%= link_to listing.listing_title, listing %></h5>
        <p class="card-text ele-14" style="color: #999;"><%= listing.location %></p>
      </div>
      <div class="card-footer bg-transparent ele-12" style="color: #999;">
        <%= fa_icon "home", text: listing.listing_type, left: true %>&nbsp;&nbsp;
        <%= fa_icon "bed", text: pluralize(listing.bedroom, "Bed"), left: true  %>&nbsp;&nbsp;
        <%= fa_icon "bath", text: pluralize(listing.bathroom, "Bath"), left: true  %>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
