<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>
<div class="row">
  <div class="col-md-12 show_image_container">
    <div class="center">
      <% @photos.each do |photo| %>
        <%= image_tag photo.image.url(), width: "100%", height: "350px" %>
      <% end %>
    </div>
    <div class="container slider-for">
      <% @photos.each do |photo| %>
        <%= image_tag photo.image.url(), width: "100%", height: "500px" %>
      <% end %>
    </div>
    <div class="container slider-nav">
      <% @photos.each do |photo| %>
        <%= image_tag photo.image.url(), width: "80px", height: "100px" %>
      <% end %>
    </div>

    <%#= image_tag @listing.backgroud_image(nil), class: "img-fluid" %>
  </div>
</div>
<br/>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-8">
          <h1><%= @listing.listing_title %></h1>
          <%= @listing.location %>
        </div>
        <div class="col-md-4">
          <%= image_tag avatar_url(@listing.user), class: "rounded-circle avatar_medium" %><br/>
          Listed By: <%= @listing.user.full_name %>
        </div>
      </div>
      <hr/>

      <!-- Room Info -->
      <div class="row text-flister text-center row-space-1">
        <div class="col-md-3 col-6">
          <i class="fa fa-home fa-2x"></i><br>
          <div><%= @listing.listing_type %></div>
        </div>
        <div class="col-md-3 col-6">
          <i class="fa fa-user-circle-o fa-2x"></i><br>
          <div><%= @listing.property_type %></div>
        </div>
        <div class="col-md-3 col-6">
          <i class="fa fa-bed fa-2x"></i><br>
          <div><%= pluralize(@listing.bedroom, "Bedroom") %></div>
        </div>
        <div class="col-md-3 col-6">
          <i class="fa fa-bath fa-2x"></i><br>
            <div><%= pluralize(@listing.bathroom, "Bathroom") %></div>
        </div>
      </div>
      <hr/>

      <!-- About -->
      <div class="row">
        <div class="col-md-12">
          <h3>About This Listing</h3>
          <p><%= @listing.description %></p>
        </div>
      </div>
      <hr/>

      <<div class="row">
        <div class="col-md-12">
          <%= render 'availabilities/form' %>
        </div>
      </div>

      <!-- Amenities -->

      <div class="row">
        <% if @photos.length > 0 %>
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <% @photos.each do |photo| %>
                <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
              <% end %>
            </ol>
            <div class="carousel-inner">
              <% @photos.each do |photo| %>
                <div class="carousel-item <%= 'active' if photo.id == @photos[0].id %>">
                  <%= image_tag photo.image.url(), width: "100%", height: "200px" %>
                </div>
              <% end %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        <% end %>
      </div>
      <hr/>

      <!-- REVIEWS -->
      <div class="row">
        <%= render 'comments/comment_form' %>

        <div id="comments" data-listing-id="<%= @listing.id %>">
          <%= render @listing.comments %>
        </div>
      </div>


      <div class="row">
        <div id="map"></div>
        <script src=ENV["map_url"]></script>
        <script>
          function initialize() {
            var location = {lat: <%= @listing.latitude %>, lng: <%= @listing.longitude %>};
            var map = new google.maps.Map(document.getElementById('map'), {
              center: location,
              zoom: 14
            });

            var marker = new google.maps.Marker({
              position: location,
              map: map
            });

            var infoWindow = new google.maps.InfoWindow({
              content: '<div id="content"><%= image_tag @listing.backgroud_image(:medium), width: "100%" %> <br><br><p><%= @listing.location %></p></div>'
            });

            infoWindow.open(map, marker);
          }
          // $(document).on("turbolinks:load", function(){
          //   initialize(<%= raw @listings.to_json %>)
          //   })

          google.maps.event.addDomListener(window, 'load', initialize);

        </script>
      </div>
      <hr/>

      <!-- NEAR BY ROOMS -->
      <div class="row">
        <h3>Near by</h3>
        <div class="col-md-12">
          <div class="row">
            <%# for listing in @listing.nearbys(4) %>
              <div class="col-md-4 col-sm-6">
                <div class="card">
                  <div class="card-header preview">
                    <%#= image_tag listing.backgroud_image(:medium) %>
                  </div>
                  <div class="card-body">
                    <%#= link_to listing.listing_title, listing %><br/>
                    (<%#= listing.distance.round(2) %> miles away)
                  </div>
                </div>
              </div>
            <%# end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Reservation Form -->
    <div class="col-md-4">
      <%#= render 'reservations/form' %>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {

    $('.slider-for').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      arrows: false,
      fade: true,
      asNavFor: '.slider-nav'
    });
    $('.slider-nav').slick({
      slidesToShow: 5,
      slidesToScroll: 1,
      asNavFor: '.slider-for',
      dots: true,
      centerMode: true,
      focusOnSelect: true
    });

    $('.center').slick({
      centerMode: true,
      centerPadding: '60px',
      slidesToShow: 3,
      arrows: false,
      infinite: true,
      speed: 300,
      dots: true,
      autoplay: true,
      autoplaySpeed: 3000,
      responsive: [
        {
        breakpoint: 868,
          settings: {
            arrows: true,
            centerMode: true,
            centerPadding: '40px',
            slidesToShow: 2
          }
        },
        {
          breakpoint: 550,
          settings: {
            arrows: true,
            centerMode: true,
            centerPadding: '40px',
            slidesToShow: 1
          }
        }
      ]
    });
  });

</script>
