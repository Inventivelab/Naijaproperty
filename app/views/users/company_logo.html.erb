<div class="row" id="edit-profile">
  <div class="col-md-3 col-sm-5 col-3 text-center" id="profile-menu">
    <%= render 'shared/profile_nav' %>
  </div>

    <div class=" col-md-9 col-sm-7 col-9 text-center" id="profile-content">
      <div class="container">
        <div class="card">
          <div class="card-header">Company Logo</div>
            <div class="card-body">
              <div class="container-flow">
                <%= form_for @user, url: user_logos_path(@user), method: 'post', html: {multipart: true} do |f| %>
                  <div class="row">
                    <div class="col-md-8 col-12">
                      <span id="logos"><%= render 'logos/uploaded_logos' %></span>
                    </div>


                    <div class="col-md-4 col-12">
                      <div class="card justify-content-center" style="width: 100%; height: 200px; text-align: center; color: #e6efee; font-size: 6rem; border: 4px dashed #e6efee;">
                        <div class="card-body btn-file ">
                          <i class="fa fa-plus" aria-hidden="true" style="color: #e6efee;"></i>
                          <%= file_field_tag "banners[]", type: :file, multiple: true %>
                        </div>
                      </div><br />
                      <div class="card " style="width: 100%; margin: auto; text-align: center; color: #e6efee;">
                        <div class="card-header text-center">
                          <span class="listing-title">
                            <%= button_tag fa_icon("upload", text: "Upload", left: true), class: "btn btn-form", style: "font-size: 1.3rem" %>
                            <%#= f.submit "Upload", class: "btn btn-form" %>
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>

                <% end %>

              </div>
          </div>
        </div>

      </div>
    </div>
  </div>

</div>
