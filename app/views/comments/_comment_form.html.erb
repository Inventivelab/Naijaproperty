<% if user_signed_in? %>
  <%= form_for @comment, url: '#' do |f| %>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>

    <%= f.submit 'Post Comment', rows: "4", cols: "7", class: 'btn btn-primary' %>
  <% end %>
  <% else %>
  <%= link_to "Sign in to post comment", new_user_session_path, class: "btn btn-form "%>
<% end %>